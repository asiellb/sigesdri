{% extends 'DRIPassportBundle:Control:layout.control.html.twig' %}

{% block title %}{{ parent() }} | Modificar Control | {{ control.number }} {% endblock %}

{% block page_level_plugins_css %}
    <link href="{{ asset('assets/global/plugins/bootstrap-select/css/bootstrap-select.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/select2/css/select2.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/select2/css/select2-bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/icheck/skins/all.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block page_level_plugins_js %}
    <script src="{{ asset('assets/global/plugins/bootstrap-select/js/bootstrap-select.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/select2/js/select2.full.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.es.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/icheck/icheck.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/jquery-validation/js/jquery.validate.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/jquery-validation/js/localization/messages_es.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/jquery-validation/js/additional-methods.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/pages/scripts/plugins/jquery-validation/additional-methods.js') }}" type="text/javascript"></script>
{% endblock %}

{% block page_level_scrpt %}
    <script src="{{ asset('assets/pages/scripts/init-form-plugins.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/pages/scripts/passport-control-form.js') }}" type="text/javascript"></script>
{% endblock %}

{% block  page_breadcrumb %}
    {{ parent() }}
    <li>
        <span>Modificar </span>
        <i class="fa fa-circle"></i>
        <span>{{ control.number }} </span>
    </li>
{% endblock %}

{% block page_dashboard %}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(edit_form, {'attr': {'id':'submit_passport_control_edit_form','class': 'form-horizontal form-row-seperated', 'role':'form'}}) }}
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-cogs font-blue-dark"></i>
                            <span class="caption-subject font-blue-dark bold uppercase"> Modificar Control: <span class="font-green-sharp"># {{ control.number }} </span>
                            </span>
                        </div>
                        <div class="actions btn-set">
                            <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ path('passport_control_index') }}">
                                <span class="fa fa-list" aria-hidden="true"></span>
                                Ir al listado
                            </a>
                            <button class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" type="reset">
                                <i class="fa fa-reply"></i> Reset
                            </button>
                            <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ path('passport_control_show', { 'numberSlug':  control.numberSlug }) }}">
                                <span class="fa fa-eye" aria-hidden="true"></span>
                                Ver Detalles
                            </a>
                            <button class="btn btn-success btn-circle" type="submit">
                                <i class="fa fa-check"></i> Guardar
                            </button>
                            <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:"> </a>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Pasaporte</label>
                                <div class="col-md-10">
                                    {% if control.passport is null %}
                                        {{ form_widget(edit_form.passport) }}
                                    {% else %}
                                        <input type="text" class="form-control" value="{{ control.passport.number }}" disabled>
                                    {% endif %}
                                    <div id="form_passport_error"></div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Fecha de entrega</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.deliveryDate) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Especialista que recibe</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.receivesSpecialist) }}
                                    <div id="form_receivesSpecialist_error"></div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Fecha de recogida</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.pickUpDate) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Especialista que entrega</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.deliversSpecialist) }}
                                    <div id="form_deliversSpecialist_error"></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="submit" class="btn green button-submit">
                                        Guardar
                                        <i class="fa fa-check"></i>
                                    </button>
                                    <a class="btn btn-default" href="{{ path('passport_control_index') }}">
                                        Ir al listado
                                        <i class="fa fa-list"></i>
                                    </a>
                                    <a class="btn btn-default" href="{{ absolute_url(lastPage) }}">
                                        Cancelar
                                        <i class="fa fa-close"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}