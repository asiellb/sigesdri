{% extends '::pdf/pdf_base.html.twig' %}

{% block body %}

    <div style="width: 100%; text-align: center;margin-bottom: 3em;margin-top: 3em;">
        <h3 class="font-blue-dark sbold">REPORTE ANUAL DE LOS CONVENIOS REACTIVADOS Y SUSCRITOS</h3>
    </div>
    <table class="table table-striped table-advance table-hover">
        <thead>
        <tr>
            <th>Región</th>
            <th>País</th>
            <th class="aling-center">Total de Convenios</th>
            <th class="aling-center">Activos</th>
            <th class="aling-center">Reactivados</th>
            <th class="aling-center">Firmados</th>
        </tr>
        </thead>
        <tbody>
        {% for i in countryArray %}
            <tr>
                <td>{{ i.region }}</td>
                <td>{{ i.name }}</td>
                <td class="aling-center">{{ i.agreementsTotal }}</td>
                <td class="aling-center">{{ i.agreementsActive }}</td>
                <td class="aling-center">{{ i.agreementsReactived }}</td>
                <td class="aling-center">{{ i.agreementsSigned }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}