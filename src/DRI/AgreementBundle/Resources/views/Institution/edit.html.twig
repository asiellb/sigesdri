{% block  page_breadcrumb %}
    {{ parent() }}
    <li>
        <span>Modificar </span>
        <i class="fa fa-circle"></i>
        <span># {{ institution.acronym }} </span>
    </li>
{% endblock %}

{% block page_title %}
{% endblock %}

{% block page_dashboard %}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(edit_form, {'attr': {'id':'submit_institution_edit_form','class': 'form-horizontal form-row-seperated', 'role':'form'}}) }}
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cogs font-blue-dark"></i>
                        <span class="caption-subject font-blue-dark bold uppercase">
                            Modificar Institución Extranjera:
                            <span class="font-green-sharp"> {{ institution.name }}</span>
                        </span>
                    </div>
                    <div class="actions btn-set">
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ absolute_url(lastPage) }}">
                            <i class="fa fa-angle-left"></i> Volver
                        </a>
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ path('institution_index') }}">
                            <span class="fa fa-list" aria-hidden="true"></span>
                            Ir al listado
                        </a>
                        <button class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" type="reset">
                            <i class="fa fa-reply"></i> Reset
                        </button>
                        <button class="btn btn-success btn-circle" type="submit">
                            <i class="fa fa-check"></i> Guardar
                        </button>
                        <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Nombre</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.name) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Siglas</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.acronym) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Logo</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.logoFile) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">URL</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.url) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">País</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.country) }}
                                    <div id="form_country_error"></div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Estado</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.countryState) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Provincia</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.province) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Ciudad</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.city) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Nombre del Rector</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.rector) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn green button-submit">
                                    Guardar
                                    <i class="fa fa-check"></i>
                                </button>
                                <a class="btn btn-default" href="{{ path('institution_index') }}">
                                    Ir al listado
                                    <i class="fa fa-list"></i>
                                </a>
                                <a class="btn btn-default" href="{{ absolute_url(lastPage) }}">
                                    Cancelar
                                    <i class="fa fa-close"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}

{% block page_custom_scrpt %}
    <script type="text/javascript">
        (function(w, $) {

            'use strict';

            $(function() {
                $('.cropper').each(function() {
                    new Cropper($(this));
                });
            });

        })(window, jQuery);

    </script>
{% endblock %}

