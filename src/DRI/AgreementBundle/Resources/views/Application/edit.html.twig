{% block  page_breadcrumb %}
    {{ parent() }}
    <li>
        <span>Modificar </span>
        <i class="fa fa-circle"></i>
        <span># {{ application.number }} </span>
    </li>
{% endblock %}

{% block page_title %}
{% endblock %}

{% block page_dashboard %}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(edit_form, {'attr': {'id':'submit_agreement_application_edit_form','class': 'form-horizontal form-row-seperated', 'role':'form'}}) }}
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cogs font-blue-dark"></i>
                        <span class="caption-subject font-blue-dark bold uppercase">
                            Modificar Ficha de Consulta:
                            <span class="font-green-sharp"> {{ application.number }}</span>
                        </span>
                    </div>
                    <div class="actions btn-set">
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ absolute_url(lastPage) }}">
                            <i class="fa fa-angle-left"></i> Volver
                        </a>
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ path('agreement_application_index') }}">
                            <span class="fa fa-list" aria-hidden="true"></span>
                            Ir al listado
                        </a>
                        <button class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" type="reset">
                            <i class="fa fa-reply"></i> Reset
                        </button>
                        <button class="btn btn-success btn-circle" type="submit">
                            <i class="fa fa-check"></i> Guardar
                        </button>
                        <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Institución Extranjera</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.institution) }}
                                    <div id="form_institution_error"></div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Antecedentes</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.background) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Objetivos</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.objetives) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Fundamentación</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.basement) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Compromisos Contraidos</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.commitments) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Vigencia</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.validity) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Integrante Parte Cubana</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.memberForCubanPart) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Integrante Parte Extranjera</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.memberForForeignPart) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Resultados que se esperan</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.results) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Gastos por salidas al exterior</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.expenses) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Estado</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.state) }}
                                    <div id="form_state_error"></div>
                                </div>
                            </div>
                            <div class="approved" style="display: none;">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Fecha de Confirmación</label>
                                    <div class="col-md-10">
                                        {{ form_widget(edit_form.confirmDate) }}
                                    </div>
                                </div>
                            </div>
                            <div class="rejected" style="display: none;">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Fecha de Rechazo</label>
                                    <div class="col-md-10">
                                        {{ form_widget(edit_form.rejectDate) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Razones del Rechazo</label>
                                    <div class="col-md-10">
                                        {{ form_widget(edit_form.rejectReasons) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn green button-submit">
                                    Guardar
                                    <i class="fa fa-check"></i>
                                </button>
                                <a class="btn btn-default" href="{{ path('institution_index') }}">
                                    Ir al listado
                                    <i class="fa fa-list"></i>
                                </a>
                                <a class="btn btn-default" href="{{ absolute_url(lastPage) }}">
                                    Cancelar
                                    <i class="fa fa-close"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}

