{% block  page_breadcrumb %}
    {{ parent() }}
    <li>
        <span>Modificar </span>
        <i class="fa fa-circle"></i>
        <span>{{ managerTravelPlan.number }} </span>
    </li>
{% endblock %}

{% block page_title %}
{% endblock %}

{% block page_dashboard %}

    <div class="row">
        <div class="col-md-12">
            {%
                form_theme edit_form
                'form/economic-theme.html.twig'
            %}
            {{ form_start(edit_form, {'attr': {'id':'submit_exit_managertravelplan_edit_form','class': 'form-horizontal form-row-seperated', 'role':'form'}}) }}
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cogs font-blue-dark"></i>
                        <span class="caption-subject font-blue-dark bold uppercase"> Modificar Entrada del Plan de Viajes: <span class="font-green-sharp"># {{ managerTravelPlan.number }} </span>
                            </span>
                    </div>
                    <div class="actions btn-set">
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ path('exit_managertravelplan_current_plan') }}">
                            <span class="fa fa-list" aria-hidden="true"></span>
                            Ir al Plan
                        </a>
                        <button class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" type="reset">
                            <i class="fa fa-reply"></i> Reset
                        </button>
                        <a class="btn btn-transparent red btn-outline btn-circle btn-sm"
                           href="{{ path('exit_managertravelplan_cancel', { 'id':  managerTravelPlan.id }) }}"
                           role="button"
                           data-toggle="confirmation"
                           data-original-title="¿Está seguro(a)?"
                           title="Cancelar Entrada">
                            <span class="fa fa-close" aria-hidden="true"></span>
                            Cancelar Entrada
                        </a>
                        <button class="btn btn-success btn-circle" type="submit">
                            <i class="fa fa-check"></i> Guardar
                        </button>
                        <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <h5 class="font-blue col-md-offset-2 col-md-10">DATOS DEL DIRECTIVO</h5>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Directivo </label>
                            <div class="col-md-10">
                                {% if managerTravelPlan.client is null %}
                                    {{ form_widget(edit_form.client) }}
                                {% else %}
                                    <input type="text" class="form-control" value="{{ managerTravelPlan.client.fullName }}" disabled>
                                {% endif %}
                                <div id="form_client_error"></div>
                            </div>
                        </div>
                        <h5 class="font-blue col-md-offset-2 col-md-10">DATOS DEL VIAJE</h5>
                        <div class="form-group">
                            <label class="col-md-2 control-label">País(es) de destino</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.countries) }}
                                <div id="form_countries_error"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Objetivos del Viaje</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.objetives) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Fecha de Salida</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.departureDate) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Cantidad de tiempo (días)</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.lapsed) }}
                            </div>
                        </div>

                        <h5 class="font-blue col-md-offset-2 col-md-10">FUENTE DE FINANCIAMIENTO</h5>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Información Económica</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.financing) }}
                            </div>
                        </div>

                        <h5 class="font-blue col-md-offset-2 col-md-10">DATOS PARA CONSUMO INTERNO</h5>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Estado</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.state) }}
                                <div id="form_state_error"></div>
                            </div>
                        </div>
                        <div class="approved" style="display: none;">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Aprobación</label>
                                <div class="col-md-10">
                                    <div class="row">
                                        <div class="col-md-1">
                                            {{ form_widget(edit_form.approval) }}
                                        </div>
                                        <div class="col-md-11">
                                            {{ form_widget(edit_form.approvalDate) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Observaciones</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.approvalObservations) }}
                                </div>
                            </div>
                        </div>
                        <div class="rejected" style="display: none;">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Rechazado</label>
                                <div class="col-md-10">
                                    <div class="row">
                                        <div class="col-md-1">
                                            {{ form_widget(edit_form.reject) }}
                                        </div>
                                        <div class="col-md-11">
                                            {{ form_widget(edit_form.rejectDate) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Razones</label>
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.rejectReason) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn green button-submit">
                                    Guardar
                                    <i class="fa fa-check"></i>
                                </button>
                                <a class="btn btn-default" href="{{ path('exit_managertravelplan_current_plan') }}">
                                    Ir al Plan
                                    <i class="fa fa-list"></i>
                                </a>
                                <a class="btn btn-default" href="{{ absolute_url(lastPage) }}">
                                    Cancelar
                                    <i class="fa fa-close"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>

{% endblock %}

