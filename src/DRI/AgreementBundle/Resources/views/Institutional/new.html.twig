{% block page_dashboard %}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, {'attr': {'id':'submit_agreement_institutional_form','class': 'form-horizontal form-row-seperated', 'role':'form'}}) }}
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cogs font-blue-dark"></i>
                        <span class="caption-subject font-blue-dark bold uppercase"> Crear Nuevo Convenio Institucional
                            </span>
                    </div>
                    <div class="actions btn-set">
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ absolute_url(lastPage) }}">
                            <i class="fa fa-angle-left"></i> Volver
                        </a>
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ path('agreement_institutional_list') }}">
                            <span class="fa fa-list" aria-hidden="true"></span>
                            Ir al listado
                        </a>
                        <button class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" type="reset">
                            <i class="fa fa-reply"></i> Reset
                        </button>
                        <button class="btn btn-success btn-circle" type="submit">
                            <i class="fa fa-check"></i> Guardar
                        </button>
                        <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label">No. de Ficha</label>
                            <div class="col-md-10">
                                {% if application is null %}
                                    {{ form_widget(form.application) }}
                                {% else %}
                                    <select id="agreement-institutional-application-selected" class="select2" disabled="disabled">
                                        <option value="{{ application.id }}">{{ application.number }}</option>
                                    </select>
                                {% endif %}
                                    <div id="form_application_error"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Institución Extranjera</label>
                            <div class="col-md-10">
                                {% if institution is null %}
                                    {{ form_widget(form.institution) }}
                                {% else %}
                                    <select id="institution-selected" class="select2" disabled="disabled">
                                        <option value="{{ institution.id }}">{{ institution.name }}</option>
                                    </select>
                                {% endif %}
                                <div id="form_institution_error"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Tipo de Acción</label>
                            <div class="col-md-10">
                                {{ form_widget(form.actionType) }}
                                <div id="form_actionType_error"></div>
                            </div>
                        </div>

                        <div class="form-group issue-parent" style="display: none;">
                            <label class="col-md-2 control-label">Antecesor</label>
                            <div class="col-md-10">
                                {{ form_widget(form.parent) }}
                                <div id="form_parent_error"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">No. de Convenio</label>
                            <div class="col-md-10">
                                {{ form_widget(form.number) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Inicio del Convenio</label>
                            <div class="col-md-10">
                                {{ form_widget(form.startDate) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Fin del Convenio</label>
                            <div class="col-md-10">
                                {{ form_widget(form.endDate) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Aprobación del MES</label>
                            <div class="col-md-10">
                                {{ form_widget(form.mesApproval) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Copia Digital</label>
                            <div class="col-md-10">
                                {{ form_widget(form.digitalCopyFile) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Áreas Beneficiadas</label>
                            <div class="col-md-10">
                                {{ form_widget(form.benefitedAreas) }}
                                <div id="form_benefitedAreas_error"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn green button-submit">
                                    Guardar
                                    <i class="fa fa-check"></i>
                                </button>
                                <a class="btn btn-default" href="{{ path('agreement_institutional_list') }}">
                                    Ir al listado
                                    <i class="fa fa-list"></i>
                                </a>
                                <a class="btn btn-default" href="{{ absolute_url(lastPage) }}">
                                    Cancelar
                                    <i class="fa fa-close"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block page_custom_scrpt %}
    <script type="text/javascript">
        (function(w, $) {

            'use strict';

            $(function() {
                $('.cropper').each(function() {
                    new Cropper($(this));
                });
            });

        })(window, jQuery);

    </script>
{% endblock %}
