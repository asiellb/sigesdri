{% block page_custom_scrpt %}
    <script>
        $( document ).ready(function() {
            $("#dri_exitbundle_departure_application").prop("disabled", true);
            $("#dri_exitbundle_departure_passport").prop("disabled", true);

            if (!($("#dri_exitbundle_departure_client.select2 option:selected").val() == "")){
                var clientSelector  = $("#dri_exitbundle_departure_client.select2 option:selected");

                getPassportList(clientSelector);

                App.blockUI({
                    target: $('#submit_departure_form'),
                    animate: true
                });
            }
        });

        $('#dri_exitbundle_departure_client').change(function () {
            //var clientSelector = $(this);
            var clientSelector  = $("#dri_exitbundle_departure_client.select2 option:selected");

            getPassportList(clientSelector);

            App.blockUI({
                target: $('#submit_departure_form'),
                animate: true
            });
        });

        function getPassportList(clientSelector) {
            // Request the neighborhoods of the selected city.
            $.ajax({
                url: "{{ path('list_passports_client') }}",
                type: "GET",
                dataType: "JSON",
                data: {
                    clientid: clientSelector.val()
                },
                success: function (data) {

                    var passportSelect      = $("#dri_exitbundle_departure_passport");
                    var applicationSelect   = $("#dri_exitbundle_departure_application");

                    passportSelect.prop("disabled", false);
                    passportSelect.html('');

                    applicationSelect.prop("disabled", false);
                    applicationSelect.html('');

                    // Remove current options
                    applicationSelect.select2({
                        placeholder: 'Solicitudes de ' + clientSelector.text(),
                        data: null
                    });

                    // Remove current options
                    passportSelect.select2({
                        placeholder: 'Pasaportes de ' + clientSelector.text(),
                        data: null
                    });

                    // Empty value ...
                    passportSelect.append('<option value> Select a passport of ' + clientSelector.find("option:selected").text() + ' ...</option>');

                    // Empty value ...
                    applicationSelect.append('<option value> Select a application of ' + clientSelector.find("option:selected").text() + ' ...</option>');


                    $.each(data.applications, function (key, application) {
                        applicationSelect.append('<option value="' + application.id + '">' + application.number + '</option>');
                    });

                    $.each(data.passports, function (key, passport) {
                        passportSelect.append('<option value="' + passport.id + '">' + passport.number + '</option>');
                    });


                    App.unblockUI('#submit_departure_form');
                },
                error: function (err) {
                    alert("Ocurrio un error cargando los pasaportes ...");
                }
            });
        }
    </script>
{% endblock %}