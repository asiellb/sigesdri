{% block page_dashboard %}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, {'attr': {'id':'submit_postgraduate_form','class': 'form-horizontal form-row-seperated', 'role':'form'}}) }}
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-layers font-blue-dark"></i>
                        <span class="caption-subject font-blue-dark bold uppercase"> Agregar Nuevo Estudiante de Posgrado
                        </span>
                    </div>
                    <div class="actions btn-set">
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ absolute_url(lastPage) }}">
                            <i class="fa fa-angle-left"></i> Volver
                        </a>
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ path('postgraduate_list') }}">
                            <span class="fa fa-list" aria-hidden="true"></span>
                            Ir al listado
                        </a>
                        <button class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" type="reset">
                            <i class="fa fa-reply"></i> Reset
                        </button>
                        <button class="btn btn-success btn-circle" type="submit">
                            <i class="fa fa-check"></i> Guardar
                        </button>
                        <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label">CI</label>
                            <div class="col-md-10">
                                {{ form_widget(form.ci) }}
                                <div id="form_type_error"> </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Nombre</label>
                            <div class="col-md-10">
                                {{ form_widget(form.names) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Apellidos</label>
                            <div class="col-md-10">
                                {{ form_widget(form.lastNames) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Fecha de Nacimiento</label>
                            <div class="col-md-10">
                                {{ form_widget(form.birthday) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Género</label>
                            <div class="col-md-10">
                                {{ form_widget(form.gender) }}
                                <div id="form_gender_error"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Foto</label>
                            <div class="col-md-10">
                                {{ form_widget(form.pictureFile) }}
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-2 control-label">País</label>
                            <div class="col-md-10">
                                {{ form_widget(form.country) }}
                                <div id="form_country_error"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">No. Pasaporte</label>
                            <div class="col-md-10">
                                {{ form_widget(form.passportNumber) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Email Institucional</label>
                            <div class="col-md-10">
                                {{ form_widget(form.email) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Email exterior</label>
                            <div class="col-md-10">
                                {{ form_widget(form.foreignEmail) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Teléfono Celular</label>
                            <div class="col-md-10">
                                {{ form_widget(form.cellPhone) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Dirección</label>
                            <div class="col-md-10">
                                {{ form_widget(form.address) }}
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-2 control-label">Fecha de entrada al centro</label>
                            <div class="col-md-10">
                                {{ form_widget(form.entryDate) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Fecha de vencimiento de estancia</label>
                            <div class="col-md-10">
                                {{ form_widget(form.expiryDate) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Tipo de Curso</label>
                            <div class="col-md-10">
                                {{ form_widget(form.courseType) }}
                                <div id="form_courseType_error"></div>
                            </div>
                        </div>
                        <div class="form-group course-select">
                            <label class="col-md-2 control-label">Nombre del Curso</label>
                            <div class="col-md-10">
                                {{ form_widget(form.course) }}
                                <div id="form_course_error"></div>
                            </div>
                        </div>
                        <div class="form-group course-text" style="display: none">
                            <label class="col-md-2 control-label">Nombre del Curso</label>
                            <div class="col-md-10">
                                {{ form_widget(form.shortCourse) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn green button-submit">
                                    Guardar
                                    <i class="fa fa-check"></i>
                                </button>
                                <a class="btn btn-default" href="{{ path('postgraduate_list') }}">
                                    Ir al listado
                                    <i class="fa fa-list"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


{% block page_custom_scrpt %}
    <script type="text/javascript">
        (function(w, $) {

            'use strict';

            $(function() {
                $('.cropper').each(function() {
                    new Cropper($(this));
                });
            });

        })(window, jQuery);
    </script>
{% endblock %}