{% extends 'DRIPassportBundle:Application:layout.application.html.twig' %}

{% block title %}{{ parent() }} | Nueva {% endblock %}

{% block page_level_plugins_css %}
    <link href="{{ asset('assets/global/plugins/bootstrap-select/css/bootstrap-select.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/select2/css/select2.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/select2/css/select2-bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/icheck/skins/all.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block page_level_plugins_js %}
    <script src="{{ asset('assets/global/plugins/bootstrap-select/js/bootstrap-select.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/select2/js/select2.full.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.es.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/icheck/icheck.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/jquery-validation/js/jquery.validate.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/jquery-validation/js/localization/messages_es.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/jquery-validation/js/additional-methods.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/bootstrap-wizard/jquery.bootstrap.wizard.min.js') }}" type="text/javascript"></script>
{% endblock %}

{% block page_level_scrpt %}
    <script src="{{ asset('assets/pages/scripts/init-form-plugins.js') }}" type="text/javascript"></script>
{% endblock %}

{% block  page_breadcrumb %}
    {{ parent() }}
    <li>
        <span>Nueva </span>
    </li>
{% endblock %}

{% block page_title %}

{% endblock %}

{% block page_dashboard %}
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cogs font-blue-dark"></i>
                        <span class="caption-subject font-blue-dark bold uppercase"> Agregar Nueva Solicitud de Pasaporte
                        </span>
                    </div>
                </div>
                <div class="portlet-body form">
                    {{ form_start(form, {'attr': {'id':'submit_passport_application_form','class': '', 'role':'form'}}) }}
                    <div class="form-wizard">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label">Cliente que solicita</label>
                                        {{ form_widget(form.client) }}
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Órgano Solicitante</label>
                                        {{ form_widget(form.applicantOrgan) }}
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Motivos del Viaje</label>
                                        {{ form_widget(form.travelReason) }}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label">Razón de Solicitud</label>
                                        {{ form_widget(form.applicationReason) }}
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">Fecha de Solicitud</label>
                                        {{ form_widget(form.applicationDate) }}
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">Tipo de Solicitud</label>
                                        {{ form_widget(form.applicationType) }}
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">Tipo de Pasaporte</label>
                                        {{ form_widget(form.passportType) }}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label">Estado de Solicitud</label>
                                        {{ form_widget(form.state) }}
                                    </div>


                                    <div class="form-group">
                                        <label class="control-label">Enviada el</label>
                                        {{ form_widget(form.sendDate) }}
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">Confirmada el</label>
                                        {{ form_widget(form.confirmDate) }}
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">Rechazada el</label>
                                        {{ form_widget(form.rejectDate) }}
                                    </div>


                                    <div class="form-group">
                                        <label class="control-label">Razones del rechazo</label>
                                        {{ form_widget(form.rejectReasons) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green button-submit">
                                        Guardar
                                        <i class="fa fa-check"></i>
                                    </button>
                                    <a class="btn btn-default" href="{{ path('passport_application_index') }}">
                                        Ir al listado
                                        <i class="fa fa-list"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

