{% extends 'DRIPassportBundle:Application:layout.application.html.twig' %}

{% block title %}{{ parent() }} | Nueva Solicitud {% endblock %}

{% block page_level_plugins_css %}
    <link href="{{ asset('assets/global/plugins/bootstrap-select/css/bootstrap-select.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/select2/css/select2.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/select2/css/select2-bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/icheck/skins/all.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block page_level_plugins_js %}
    <script src="{{ asset('assets/global/plugins/bootstrap-select/js/bootstrap-select.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/select2/js/select2.full.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.es.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/icheck/icheck.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/jquery-validation/js/jquery.validate.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/jquery-validation/js/localization/messages_es.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/jquery-validation/js/additional-methods.min.js') }}" type="text/javascript"></script>
{% endblock %}

{% block page_level_scrpt %}
    <script src="{{ asset('assets/pages/scripts/init-form-plugins.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/pages/scripts/passport-application-form.js') }}" type="text/javascript"></script>
{% endblock %}

{% block  page_breadcrumb %}
    {{ parent() }}
    <li>
        <span>Nueva Solicitud</span>
    </li>
{% endblock %}

{% block page_title %}
{% endblock %}

{% block page_dashboard %}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, {'attr': {'id':'submit_passport_application_form','class': 'form-horizontal form-row-seperated', 'role':'form'}}) }}
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-cogs font-blue-dark"></i>
                            <span class="caption-subject font-blue-dark bold uppercase"> Crear Nueva Solicitud de Pasaporte
                            </span>
                        </div>
                        <div class="actions btn-set">
                            <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ absolute_url(lastPage) }}">
                                <i class="fa fa-angle-left"></i> Volver
                            </a>
                            <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ path('passport_application_index') }}">
                                <span class="fa fa-list" aria-hidden="true"></span>
                                Ir al listado
                            </a>
                            <button class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" type="reset">
                                <i class="fa fa-reply"></i> Reset
                            </button>
                            <button class="btn btn-success btn-circle" type="submit">
                                <i class="fa fa-check"></i> Guardar
                            </button>
                            <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;"> </a>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Cliente que solicita</label>
                                <div class="col-md-10">
                                    {% if client is null %}
                                        {{ form_widget(form.client) }}
                                    {% else %}
                                        <input type="text" class="form-control" value="{{ client.fullName }}" disabled>
                                    {% endif %}
                                    <div id="form_client_error"></div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Órgano Solicitante</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.organ) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Motivos del Viaje</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.travelReason) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Fecha de Solicitud</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.applicationDate) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Razón de Solicitud</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.reason) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Tipo de Solicitud</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.applicationType) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Tipo de Pasaporte</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.passportType) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Estado de Solicitud</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.state) }}
                                </div>
                            </div>
                            <div class="reject-issues" style="display: none;">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Razones del rechazo</label>
                                    <div class="col-md-10">
                                        {{ form_widget(form.rejectReasons) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="submit" class="btn green button-submit">
                                        Guardar
                                        <i class="fa fa-check"></i>
                                    </button>
                                    <a class="btn btn-default" href="{{ path('passport_application_index') }}">
                                        Ir al listado
                                        <i class="fa fa-list"></i>
                                    </a>
                                    <a class="btn btn-default" href="{{ absolute_url(lastPage) }}">
                                        Cancelar
                                        <i class="fa fa-close"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}