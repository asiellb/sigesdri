{% extends "DRIForeingStudentBundle:Postgraduate:profile.layout.html.twig" %}

{% block title %}{{ parent() }} | Perfil | {{ postgraduate.fullName }} {% endblock %}

{% block page_level_style %}
    <link href="{{ asset('assets/pages/css/profile.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block page_level_plugins_js %}
    <script src="{{ asset('assets/global/plugins/jquery.sparkline.min.js') }}" type="text/javascript"></script>
{% endblock %}

{% block page_level_scrpt %}
    <script src="{{ asset('assets/pages/scripts/client-show.js') }}" type="text/javascript"></script>
{% endblock %}


{% block  page_breadcrumb %}
    {{ parent() }}
    <li>
        <span>Perfil</span>
        <i class="fa fa-circle"></i>
        <span>{{ postgraduate.fullName }} </span>
    </li>
{% endblock %}

{% block page_title %}
{% endblock %}

{% block profile_content %}
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-layers font-blue-dark"></i>
                        <span class="caption-subject font-blue-dark bold uppercase">
                            Perfil
                            <span class="font-green-sharp"> {{ postgraduate.fullName }}</span>
                        </span>
                    </div>
                    <div class="actions btn-set">
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ path('postgraduate_list') }}">
                            <span class="fa fa-list" aria-hidden="true"></span>
                            Ir al listado
                        </a>
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ path('postgraduate_edit', { 'fullNameSlug':  postgraduate.fullNameSlug }) }}">
                            <span class="fa fa-cog" aria-hidden="true"></span>
                            Editar
                        </a>
                        <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Ci</strong></p>
                                <p>
                                    {{ postgraduate.ci }}
                                </p>

                            </div>
                            <div class="col-md-6">
                                <p><strong>Fullname</strong></p>
                                <p>
                                    {{ postgraduate.fullName }}
                                </p>

                            </div>
                            <div class="col-md-6">
                                <p><strong>Birthday</strong></p>
                                <p>
                                    {% if postgraduate.birthday %}{{ postgraduate.birthday|date('Y-m-d') }}{% endif %}
                                </p>

                            </div>
                            <div class="col-md-6">
                                <p><strong>Gender</strong></p>
                                <p>
                                    {{ postgraduate.gender }}
                                </p>

                            </div>
                            <div class="col-md-6">
                                <p><strong>Email</strong></p>
                                <p>
                                    {{ postgraduate.email }}
                                </p>

                            </div>
                            <div class="col-md-6">
                                <p><strong>Foreignemail</strong></p>
                                <p>
                                    {{ postgraduate.foreignEmail }}
                                </p>

                            </div>
                            <div class="col-md-6">
                                <p><strong>Cellphone</strong></p>
                                <p>
                                    {{ postgraduate.cellPhone }}
                                </p>

                            </div>
                            <div class="col-md-6">
                                <p><strong>Passportnumber</strong></p>
                                <p>
                                    {{ postgraduate.passportNumber }}
                                </p>

                            </div>
                            <div class="col-md-6">
                                <p><strong>Entrydate</strong></p>
                                <p>
                                    {% if postgraduate.entryDate %}{{ postgraduate.entryDate|date('Y-m-d') }}{% endif %}
                                </p>

                            </div>
                            <div class="col-md-6">
                                <p><strong>Expirydate</strong></p>
                                <p>
                                    {% if postgraduate.expiryDate %}{{ postgraduate.expiryDate|date('Y-m-d') }}{% endif %}
                                </p>

                            </div>
                            <div class="col-md-6">
                                <p><strong>Year</strong></p>
                                <p>
                                    {{ postgraduate.address }}
                                </p>

                            </div>
                            <div class="col-md-6">
                                <p><strong>Tipo de Curso</strong></p>
                                <p>
                                    {{ postgraduate.courseType }}
                                </p>

                            </div>
                            <div class="col-md-6">
                                <p><strong>Nombre del Curso</strong></p>
                                <p>
                                    {% if postgraduate.course is not null %}
                                        {{ postgraduate.course.name }}
                                    {% else %}
                                        {{ postgraduate.shortCourse }}
                                    {% endif %}
                                </p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

