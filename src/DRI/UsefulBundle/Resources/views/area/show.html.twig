{% extends 'DRIUsefulBundle:area:layout.area.html.twig' %}

{% block title %}{{ parent() }} | Ver {% endblock %}



{% block  page_breadcrumb %}
    {{ parent() }}
    <li>
        <span>Ver </span>
    </li>
{% endblock %}

{% block page_title %}
    {{ parent() }}
    <small>Ver </small>
{% endblock %}

{% block page_dashboard %}
<div id="top" class="row">
    <div class="page-header">
        <h2>View facultad <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ area.id }}        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Nombre</strong></p>
        <p>
            {{ area.name }}        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Jefe</strong></p>
        <p>
            {{ area.leader }}        </p>

    </div>
</div>

<hr/>

<div class="form-group">
    <a class="btn btn-default" href="{{ path('area') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
            <a class="btn btn-primary" href="{{ path('area_edit', { 'id':  facultad.id }) }}">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>

            Edit
        </a>
                <a class="btn btn-info" href="{{ path('area_new') }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            New
        </a>
                <form action="{{ path('area_delete', { 'id': facultad.id }) }}" method="post" style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                Delete</button>
        </form>
    </div>


{% endblock %}

