{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': ''}}) }}
    <h3 class="form-title font-green"></h3>

    <div class="form-title">
        <span class="form-title">Bienvenido.</span>
        <span class="form-subtitle">Por favor configura tu cuenta.</span>
    </div>

    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9" for="username">Ingrese su nombre</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            {{ form_widget(form.firstName, {'attr':{'class':'form-control form-control-solid placeholder-no-fix', 'placeholder':'Ingrese su nombre'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9" for="username">Ingrese sus apellidos</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            {{ form_widget(form.lastName, {'attr':{'class':'form-control form-control-solid placeholder-no-fix', 'placeholder':'Ingrese sus apellidos'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9" for="username">Ingrese el nombre de usuario</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            {{ form_widget(form.username, {'attr':{'class':'form-control form-control-solid placeholder-no-fix', 'placeholder':'Ingrese el nombre de usuario'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9" for="username">Ingrese su email</label>
        <div class="input-icon">
            <i class="fa fa-envelope"></i>
            {{ form_widget(form.email, {'attr':{'class':'form-control form-control-solid placeholder-no-fix', 'placeholder':'Ingrese su email'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9" for="username">Ingrese la contrase単a</label>
        <div class="input-icon">
            <i class="fa fa-lock"></i>
            {{ form_widget(form.plainPassword.first, {'attr':{'class':'form-control form-control-solid placeholder-no-fix', 'placeholder':'Ingrese la contrase単a'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9" for="username">Confirme la contrase単a</label>
        <div class="input-icon">
            <i class="fa fa-lock"></i>
            {{ form_widget(form.plainPassword.second, {'attr':{'class':'form-control form-control-solid placeholder-no-fix', 'placeholder':'Confirme la contrase単a'}}) }}
        </div>
    </div>

    {{ form_widget(form.userImageFile) }}

    <div style="margin-top: 10px">
        <input class="btn red btn-block uppercase" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}
