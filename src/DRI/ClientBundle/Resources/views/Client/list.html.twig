{% block page_title %}
{% endblock %}

{% block  page_breadcrumb %}
    {{ parent() }}
    <li>
        {% if '/client/list' in app.request.getPathInfo() %}
            <span>Listado General</span>
        {% endif %}
    </li>
{% endblock %}

{% block page_dashboard %}
    <div class="row">
        <div class="col-md-12">
            <!-- Begin: life time stats -->
            <div class="portlet light portlet-fit portlet-datatable bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-blue-dark"></i>
                        <span class="caption-subject font-blue-dark sbold uppercase">Listado general de Clientes</span>
                    </div>
                    <div class="actions">
                        <a href="{{ path('client_new') }}" class="btn btn-primary btn-circle btn-sm active">
                            <i class="fa fa-plus"></i> Agregar Cliente
                        </a>
                        <div class="btn-group">
                            <a class="btn red btn-outline btn-circle" href="javascript:;" data-toggle="dropdown">
                                <i class="fa fa-share"></i>
                                <span class="hidden-xs"> Herramientas </span>
                                <i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu pull-right" id="sg_datatable_tools">
                                <li>
                                    <a href="javascript:;" data-action="0" aria-controls="sg-datatables-client_datatable" class="tool-action">
                                        <i class="icon-printer"></i> Imprimir</a>
                                </li>
                                <li>
                                    <a href="javascript:;" data-action="1" aria-controls="sg-datatables-client_datatable" class="tool-action">
                                        <i class="icon-check"></i> Copiar</a>
                                </li>
                                <li>
                                    <a href="javascript:;" data-action="2" aria-controls="sg-datatables-client_datatable" class="tool-action">
                                        <i class="icon-doc"></i> PDF</a>
                                </li>
                                <li>
                                    <a href="javascript:;" data-action="3" aria-controls="sg-datatables-client_datatable" class="tool-action">
                                        <i class="icon-paper-clip"></i> Excel</a>
                                </li>
                                <li>
                                    <a href="javascript:;" data-action="4" aria-controls="sg-datatables-client_datatable" class="tool-action">
                                        <i class="icon-cloud-upload"></i> CSV</a>
                                </li>
                                <li class="divider"> </li>
                                <li>
                                    <a href="javascript:;" data-action="5" aria-controls="sg-datatables-client_datatable" class="tool-action">
                                        <i class="icon-refresh"></i> Recargar</a>
                                </li>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-container">
                        <div class="table-actions-wrapper">
                            <span> </span>
                            <select id="table-group-action-input" class="table-group-action-input form-control input-inline input-small input-sm">
                                <option value="">Seleccionar...</option>
                                <option value="http://localhost/sigesdri/web/app_dev.php/client/bulk/delete">Borrar</option>
                            </select>
                            <button class="btn btn-sm green table-group-action-submit" data-message="¿Está seguro?">
                                <i class="fa fa-check"></i> Enviar</button>
                        </div>
                        {{ sg_datatables_render(datatable, {
                            'classes': 'table table-striped table-bordered table-hover table-checkable dataTable no-footer'
                        }) }}
                    </div>
                </div>
            </div>
            <!-- End: life time stats -->
        </div>
    </div>
{% endblock %}