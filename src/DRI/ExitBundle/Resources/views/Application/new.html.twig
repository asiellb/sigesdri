{% block page_dashboard %}
    <div class="profile-content">
        <div class="portlet light ">
            <div class="portlet-title tabbable-line">
                <div class="caption caption-md">
                    <span class="caption-subject font-blue-madison bold uppercase">Solicitud de Salida al Exterior</span>
                </div>
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#tab_1_1" data-toggle="tab"><i class=" fa fa-user"></i> Datos de la Solicitud</a>
                    </li>
                    <li>
                        <a href="#tab_1_2" data-toggle="tab"><i class="fa fa-photo"></i> Información Interna</a>
                    </li>
                </ul>
            </div>
            {%
                form_theme form
                'form/economic-theme.html.twig'
            %}
            {{ form_start(form, {'attr': {'id':'submit_exit_application_form','class': '', 'role':'form'}}) }}
            <div class="portlet-body form">
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-body">
                            <h5 class="font-blue">DATOS DEL SOLICITANTE</h5>
                            <div class="form-group">
                                <label class="control-label">Nombre</label>
                                {{ form_widget(form.client) }}
                            </div>
                        </div>
                        <div id="client_info">
                            <span id="client_school" class="control-label"></span>
                            <div class="profile-userpic">
                                <img id="client_img" class="img-responsive" src="" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-10" style="border-left: 1px solid #e7ecf1;">
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab_1_1">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="others-cols col-md-3">
                                            <h5 class="font-blue">DATOS DE LA MISIÓN PROPUESTA</h5>
                                            <div class="form-group">
                                                <label class="control-label">País de destino</label>
                                                {{ form_widget(form.country) }}
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Institución</label>
                                                {{ form_widget(form.institution) }}
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Cantidad de tiempo</label>
                                                {{ form_widget(form.lapsed) }}
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Fecha de Salida</label>
                                                {{ form_widget(form.exitDate) }}
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Fecha de Retorno</label>
                                                {{ form_widget(form.arrivalDate) }}
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Concepto de Salida</label>
                                                {{ form_widget(form.concept) }}
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Copia del Plan de trabajo</label>
                                                {{ form_widget(form.workPlanSynthesisFile) }}
                                            </div>
                                        </div>

                                        <div class="drop-issues col-md-6">
                                            <h5 class="font-blue">INFORMACIÓN A LA COMISION DE CUADROS</h5>
                                            <div class="form-group">
                                                <label class="control-label">Cuadro Sustituto</label>
                                                {{ form_widget(form.directiveSubstitute) }}
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Sustituto de GOE</label>
                                                {{ form_widget(form.goeSubstitute) }}
                                            </div>

                                            <h5 class="font-blue">INFORMACIÓN ECONÓMICA PARA PROFESORES INVITADOS, PAQUETES DE POSTGRADO O ASESORÍA</h5>
                                            <div class="form-group">
                                                <label class="control-label">Salario Mensual</label>
                                                {{ form_widget(form.monthlyPay) }}
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Salario Total</label>
                                                {{ form_widget(form.totalPay) }}
                                            </div>

                                            <h5 class="font-blue">INFORMACIÓN ECONÓMICA PARA OTROS CONCEPTOS DE SALIDA</h5>

                                            <label class="control-label">Información Económica:</label>
                                            {{ form_widget(form.economics) }}

                                        </div>

                                        <div class="drop-issues col-md-3">
                                            <h5 class="font-blue">APROBACIONES</h5>
                                            <div class="form-group">
                                                <label class="control-label">Propuesto por</label>
                                                {{ form_widget(form.proposedBy) }}
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Aprobación PCC</label>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        {{ form_widget(form.pccApproval) }}
                                                    </div>
                                                    <div class="col-md-8">
                                                        {{ form_widget(form.pccApprovalDate) }}
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Aprobación VRI</label>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        {{ form_widget(form.ivApproval) }}
                                                    </div>
                                                    <div class="col-md-8">
                                                        {{ form_widget(form.ivApprovalDate) }}
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Aprobación CC</label>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        {{ form_widget(form.dcApproval) }}
                                                    </div>
                                                    <div class="col-md-8">
                                                        {{ form_widget(form.dcApprovalDate) }}
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Aprobación OS</label>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        {{ form_widget(form.secretOffice) }}
                                                    </div>
                                                    <div class="col-md-8">
                                                        {{ form_widget(form.secretOfficeDate) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane" id="tab_1_2">
                                <div class="form-body">
                                    <h5 class="font-blue">DATOS PARA CONSUMO INTERNO</h5>
                                    <div class="form-group">
                                        <label class="control-label">Estado</label>
                                        {{ form_widget(form.state) }}
                                    </div>
                                    <div class="approved" style="display: none;">
                                        <div class="form-group">
                                            <label class="control-label">Número de Acuerdo</label>
                                            {{ form_widget(form.agreement) }}
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Fecha de Aprobado</label>
                                            {{ form_widget(form.approvalDate) }}
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Observaciones</label>
                                            {{ form_widget(form.approvalObservations) }}
                                        </div>
                                    </div>
                                    <div class="rejected" style="display: none;">
                                        <div class="form-group">
                                            <label class="control-label">Fecha de Rechazo</label>
                                            {{ form_widget(form.rejectDate) }}
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Razones</label>
                                            {{ form_widget(form.rejectReason) }}
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form">
                <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn green button-submit">
                            Guardar
                            <i class="fa fa-check"></i>
                        </button>
                        <a class="btn btn-default" href="{{ path('exit_application_index') }}">
                            Ir al listado
                            <i class="fa fa-list"></i>
                        </a>
                    </div>
                </div>
            </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

