{% extends 'DRIAgreementBundle:Institutional:layout.institutional.html.twig' %}

{% block title %}{{ parent() }} | Institucional | {{ institutional.number }} {% endblock %}

{% block  page_breadcrumb %}
    {{ parent() }}
    <li>
        <span># {{ institutional.number }} </span>
    </li>
{% endblock %}

{% block page_title %}
{% endblock %}

{% block page_dashboard %}

    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-layers font-blue-dark"></i>
                        <span class="caption-subject font-blue-dark bold uppercase">
                            Convenio Institucional
                            <span class="font-green-sharp">
                                # {{ institutional.number }} |
                                <small>
                                    {% if institutional.createdAt %}{{ institutional.createdAt | localizeddate('long', 'none') }}{% endif %}
                                </small>
                            </span>
                        </span>
                    </div>
                    <div class="actions btn-set">
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ path('agreement_institutional_list') }}">
                            <span class="fa fa-list" aria-hidden="true"></span>
                            Ir al listado
                        </a>
                        <a class="btn green btn-circle btn-sm" href="{{ path('agreement_institutional_new') }}">
                            <span class="fa fa-plus" aria-hidden="true"></span>
                            Crear Convenio Institucional
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tabbable-line">
                        <ul class="nav nav-tabs nav-tabs-lg">
                            <li class="active">
                                <a href="#tab_1" data-toggle="tab"> Detalles </a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab_1">
                                <div class="row">
                                    <div class="col-md-6 col-sm-12">
                                        <div class="portlet green-meadow box">
                                            <div class="portlet-title">
                                                <div class="caption">
                                                    <i class="fa fa-book"></i>Detalles del Convenio Institucional </div>
                                                <div class="actions">
                                                    <a href="{{ path('agreement_institutional_edit', { 'id':  institutional.id }) }}" class="btn btn-default btn-sm">
                                                        <i class="fa fa-pencil"></i> Editar </a>
                                                </div>
                                            </div>
                                            <div class="portlet-body">
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Número #: </div>
                                                    <div class="col-md-7 value"> {{ institutional.number }}</div>
                                                </div>
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Fecha de Inicio: </div>
                                                    <div class="col-md-7 value">
                                                        {% if institutional.startDate %}{{ institutional.startDate|localizeddate('long', 'none') }}{% endif %}
                                                    </div>
                                                </div>
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Fecha de Final: </div>
                                                    <div class="col-md-7 value">
                                                        {% if institutional.endDate %}{{ institutional.endDate|localizeddate('long', 'none') }}{% endif %}
                                                    </div>
                                                </div>
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Copia Digital: </div>
                                                    <div class="col-md-7 value">
                                                        {% if institutional.digitalCopy %}
                                                            <a class="bold" href="{{ asset(vich_uploader_asset(institutional, 'digitalCopyFile', 'DRI\\AgreementBundle\\Entity\\Institutional')) }}" target="_blank" >
                                                                <i class="la la-download"></i> Descargar ...
                                                            </a>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Aprobación del MES: </div>
                                                    <div class="col-md-7 value">
                                                        {% if institutional.mesApproval %}
                                                            <span class="font-green bold"><i class="la la-check"></i> Si</span>
                                                        {% else %}
                                                            <span class="font-red bold"><i class="la la-times"></i> No</span>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Áreas Beneficiadas: </div>
                                                    <div class="col-md-7 value">
                                                        {% for area in institutional.benefitedAreas %}
                                                            <span class="font-grey-gallery"><i class="icon-check"></i> {{ area.name }}</span> <br/>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Estado: </div>
                                                    <div class="col-md-7 value">
                                                        {% if  institutional.state == "VEN" %}
                                                            <span class="label label-danger">Vencido</span>
                                                        {% elseif  institutional.state == "PVEN" %}
                                                            <span class="label label-warning">Por Vencer</span>
                                                        {% elseif  institutional.state == "ACT" %}
                                                            <span class="label label-success">Activo</span>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-sm-12">
                                        <div class="portlet blue-hoki box">
                                            <div class="portlet-title">
                                                <div class="caption">
                                                    <i class="fa fa-user"></i>Información de la Institución </div>
                                                <div class="actions">
                                                </div>
                                            </div>
                                            <div class="portlet-body">
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Logo: </div>
                                                    <div class="col-md-7 value">
                                                        <div class="thumbnail" style="width: 120px">
                                                            <img src="{{ asset(vich_uploader_asset(institutional, 'univLogoFile', 'DRI\\AgreementBundle\\Entity\\Institutional')) }}" alt="" style="height: 120px; width: 120px; display: block;">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Nombre: </div>
                                                    <div class="col-md-7 value">
                                                        {{ institutional.institution }}
                                                    </div>
                                                </div>
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> URL: </div>
                                                    <div class="col-md-7 value">
                                                        <a href="{{ institutional.institution.url }}"><i class="la la-link"></i> Visitar el sitio</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

