    <div class="row">
        <div class="col-md-12">
            <!-- Begin: life time stats -->
            <div class="portlet light portlet-fit portlet-datatable bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings"></i>
                        <span class="caption-subject sbold uppercase">Listado de Pasaportes</span>
                    </div>
                    <div class="actions">

                        <a class="btn btn-success btn-circle" href="{{ path('pasaporte_new') }}">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo Pasaporte
                        </a>

                        <div class="btn-group">
                            <a class="btn red btn-outline btn-circle" href="javascript:;" data-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-share"></i>
                                <span class="hidden-xs"> Herramientas </span>
                                <i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu pull-right" id="pass_list_tools">
                                <li>
                                    <a href="javascript:;" data-action="0" class="tool-action">
                                        <i class="icon-printer"></i> Imprimir</a>
                                </li>
                                <li>
                                    <a href="javascript:;" data-action="1" class="tool-action">
                                        <i class="icon-check"></i> Copiar</a>
                                </li>
                                <li>
                                    <a href="javascript:;" data-action="2" class="tool-action">
                                        <i class="icon-doc"></i> PDF</a>
                                </li>
                                <li>
                                    <a href="javascript:;" data-action="3" class="tool-action">
                                        <i class="icon-paper-clip"></i> Excel</a>
                                </li>
                                <li>
                                    <a href="javascript:;" data-action="4" class="tool-action">
                                        <i class="icon-cloud-upload"></i> CSV</a>
                                </li>
                                <li class="divider"> </li>
                                <li>
                                    <a href="javascript:;" data-action="5" class="tool-action">
                                        <i class="icon-refresh"></i> Recargar</a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-container">

                            <form method="POST" action="{{ path('pasaporte_bulk_action') }} ">

                                <table class="table table-striped table-bordered table-hover table-checkable dataTable no-footer" id="pass_list" role="grid" aria-describedby="pass_list_info">
                                    <thead>
                                        <tr role="row">
                                            <th>
                                                <input type="checkbox" class="check-all icheck">
                                            </th>
                                            <th>NÃºmero</th>
                                            <th>Tipo</th>
                                            <th>Titular</th>
                                            <th>Estado</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for pasaporte in pasaportes %}
                                            <tr>
                                                <td><input type="checkbox" name="ids[]" class="check-input-row icheck" value="{{pasaporte.id}}"/></td>

                                                <td><a href="{{ path('pasaporte_show', { 'id': pasaporte.id }) }}">{{ pasaporte.noPas }}</a></td>
                                                <td>{{ pasaporte.tipoPas }}</td>
                                                <td>{{ pasaporte.titular.nombreCompleto }}</td>
                                                <td>{{ pasaporte.estadoPas }}</td>
                                                <td class="actions">
                                                    <a title='Show' class="btn green btn-outline btn-circle" href="{{ path('pasaporte_show', { 'id': pasaporte.id }) }}">
                                                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                                    </a>
                                                    <a  title='Edit' class="btn blue btn-outline btn-circle" href="{{ path('pasaporte_edit', { 'id': pasaporte.id }) }}">
                                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                                    </a>
                                                    <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn red btn-outline btn-circle" href="{{ path('pasaporte_by_id_delete', { 'id': pasaporte.id}) }}">
                                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>

                                <div class="row">
                                    <div class="col-md-4 pull-left">
                                        <div class="pagination form-inline ">
                                            <select class = "form-control" name="bulk_action" >
                                                <option value="">--Elige--</option>
                                                <option value="delete">BORRAR</option>
                                            </select>
                                            <input type="submit" id='bulkSubmitBtn' class="btn btn-danger" disabled="">
                                        </div>
                                    </div>
                                </div>
                            </form>

                    </div>
                </div>
            </div>
