    <li>
        <span>Modificar </span>
        <i class="fa fa-circle"></i>
        <span> {{ undergraduate.fullName }} </span>
    </li>
{% endblock %}

{% block page_title %}
{% endblock %}

{% block profile_content %}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(edit_form, {'attr': {'id':'submit_undergraduate_edit_form','class': 'form-horizontal form-row-seperated', 'role':'form'}}) }}
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-layers font-blue-dark"></i>
                        <span class="caption-subject font-blue-dark bold uppercase">
                            Modificar Estudiante
                            <span class="font-green-sharp"> {{ undergraduate.fullName }}</span>
                        </span>
                    </div>
                    <div class="actions btn-set">
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ path('undergraduate_list') }}">
                            <span class="fa fa-list" aria-hidden="true"></span>
                            Ir al listado
                        </a>
                        <button class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" type="reset">
                            <i class="fa fa-reply"></i> Reset
                        </button>
                        <a class="btn btn-transparent grey-cascade btn-outline btn-circle btn-sm" href="{{ path('undergraduate_show', { 'fullNameSlug':  undergraduate.fullNameSlug }) }}">
                            <span class="fa fa-eye" aria-hidden="true"></span>
                            Ver Detalles
                        </a>
                        <button class="btn btn-success btn-circle" type="submit">
                            <i class="fa fa-check"></i> Guardar
                        </button>
                        <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label">Tipo de Estudiante</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.type) }}
                                <div id="form_type_error"></div>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-2 control-label">CI</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.ci) }}
                                <div id="form_type_error"> </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Nombre</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.names) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Apellidos</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.lastNames) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Fecha de Nacimiento</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.birthday) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Género</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.gender) }}
                                <div id="form_gender_error"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Foto</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.pictureFile) }}
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-2 control-label">País</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.country) }}
                                <div id="form_country_error"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">No. Pasaporte</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.passportNumber) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Email Institucional</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.email) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Email exterior</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.foreignEmail) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Teléfono Celular</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.cellPhone) }}
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-2 control-label">Fecha de entrada al centro</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.entryDate) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Fecha de vencimiento de estancia</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.expiryDate) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Carrera</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.career) }}
                                <div id="form_career_error"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Año que cursa</label>
                            <div class="col-md-10">
                                {{ form_widget(edit_form.year) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn green button-submit">
                                    Guardar
                                    <i class="fa fa-check"></i>
                                </button>
                                <a class="btn btn-default" href="{{ path('undergraduate_list') }}">
                                    Ir al listado
                                    <i class="fa fa-list"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}


{% block page_custom_scrpt %}
    <script type="text/javascript">
        (function(w, $) {

            'use strict';

            $(function() {
                $('.cropper').each(function() {
                    new Cropper($(this));
                });
            });

        })(window, jQuery);
    </script>
{% endblock %}