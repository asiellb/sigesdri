                        if(data.hasOwnProperty("client"))
                        {
                            var client = JSON.parse(data.client);
                            imagePath = imagePath+client['clientPicture'];

                            $('#client_school').html(client['clientSchool']);
                            $('#client_img').attr('src',imagePath);
